{% extends 'admin/admin.html.twig' %}

{% block title %}Alle Menugangen{% endblock %}

{% block body %}

    <div class="container">
        <div class="section">
            <div class="row">
                <div class="col s6 offset-s3">
                    <h2 class="center-align">Alle menugangen</h2>
                    <div class="center-align">
                        <a class="waves-effect waves-light blue-grey darken-3 white-text btn"
                           href="{{ path('menutype_new') }}">Maak een nieuwe
                            menugang aan</a>
                    </div>


                    <table>
                        <thead>
                        <tr>

                            <th>Naam menugang</th>
                            <th class="center-align">Wijzig</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for menuType in menuTypes %}
                            <tr>

                                <td>{{ menuType.name }}</td>
                                <td class="center-align">
                                    <a class="waves-effect waves-light blue-grey darken-3 white-text btn"
                                       href="{{ path('menutype_edit', { 'id': menuType.id }) }}">Wijzig</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
